      <th scope="col">Amount</th>
      <th scope="col">Date</th>
      <th scope="col">Delete</th>
    </tr>
  </thead>
  <tbody>
    {{#each examples}}
    <tr data-id="{{this.id}}">
    
      <th scope="row"><a href="example/{{this.id}}">{{this.plate}}</a></th>
      <td>{{this.state}}</td>
      <td>{{this.location}}</td>
      <td>{{this.amount}}</td>
      <td>{{this.date}}</td>      
      <td><button class="btn btn-danger float-right delete">ｘ</button></td>      
    </tr>
    {{/each}}
   
  </tbody>
</table>
